<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#ffe8e8e8">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_launcher"
            android:layout_alignParentLeft="true" />

        <com.helsong.library.ProcessButton
            android:id="@+id/process_button"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:textSize="8sp"
            android:text="normal"
            custom:completeColor="#00ff00"
            custom:completeText="complete"
            custom:drawHorizontal="false"
            custom:errorColor="@android:color/white"
            custom:errorText="Error"
            custom:normalColor="#ffff0000"
            custom:normalText="Download"
            custom:processColor="#FFE823A3"
            custom:processText="processing" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:background="#ffe8e8e8">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_launcher"
            android:layout_alignParentLeft="true" />

        <com.helsong.library.ProcessButton
            android:id="@+id/process_button_2"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:textSize="10sp"
            android:text="normal"
            custom:normalDrawable="@drawable/download"
            custom:completeDrawable="@drawable/download_finish" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:background="#ffe8e8e8">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_launcher"
            android:layout_alignParentLeft="true" />

        <com.helsong.library.ProcessButton
            android:id="@+id/process_button_3"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:textSize="10sp"
            android:text="normal" />
    </RelativeLayout>

    <Button
        android:id="@+id/set_normal_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Set normal" />

    <Button
        android:id="@+id/set_process_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Set processing" />

    <Button
        android:id="@+id/set_complete_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Set complete" />

    <Button
        android:id="@+id/set_error_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Set error" />

    <Button
        android:id="@+id/reset_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Reset" />

</LinearLayout>
